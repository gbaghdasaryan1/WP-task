{
    "useTabs": false,
    "tabWidth": 4,
    "printWidth": 120,
    "singleQuote": false,
    "trailingComma": "all",
    "semi": true,
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "overrides": [
        {
            "files": [
                "*.ts"
            ],
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": [
                "*.tsx"
            ],
            "options": {
                "parser": "typescript",
                "jsxBracketSameLine": false,
                "jsxSingleQuote": false
            }
        },
        {
            "files": [
                "*.scss"
            ],
            "options": {
                "parser": "scss"
            }
        },
        {
            "files": [
                "*.json"
            ],
            "options": {
                "parser": "json"
            }
        }
    ]
}